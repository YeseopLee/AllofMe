<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.AllofMe.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
        <item name="android:title">@null</item>
    </style>

    <style name="Widget.AllofMe.Toolbar.WithArrow" parent="Widget.AllofMe.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.AllofMe.Toolbar.WithClose" parent="Widget.AllofMe.Toolbar">
        <item name="navigationIcon">@drawable/ic_close</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.AllofMe.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/gray_200</item>
        <item name="chipStrokeWidth">0.1dp</item>
        <item name="chipBackgroundColor">@color/bg_chip_selected</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.AllofMe.Chip_Small" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/gray_200</item>
        <item name="chipStrokeWidth">0.1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="chipBackgroundColor">@color/gray_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="chipIconTint">@color/gray_200</item>
    </style>

</resources>